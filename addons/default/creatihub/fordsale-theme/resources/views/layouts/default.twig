        {% block content %}{% endblock %}

        {% if (request_path() == 'uu-dai') %}
            {% include "theme::pages/promotion" %}
        {% endif %}

    </div>

    {% if (request_path() == '/') %}
        <div class="container-fluid">
            {% include "theme::pages/homepage" %}
        </div>
    {% endif %}
</main>

