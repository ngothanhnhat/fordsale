<div class="grid-item-controls">
    <ul class="list-inline">
        {% if not field_type.readonly and not field_type.disabled %}
            <li class="list-inline-item">
                <input type="checkbox">
            </li>
        {% endif %}
        <li class="list-inline-item">
            {{ str_singular(trans(form.options.grid_title)) }}
        </li>
    </ul>

    {% if not field_type.readonly and not field_type.disabled %}
        <ul class="dropdown pull-right list-inline">

            <li class="list-inline-item">
                <a href="#" data-toggle="dropdown">
                    {{ icon('cog') }}
                </a>
                <div class="dropdown-menu dropdown-menu-right">
                    <a href="#" class="dropdown-item" data-toggle="collapse"
                       data-expand="{{ trans('anomaly.field_type.grid::input.expand') }}"
                       data-collapse="{{ trans('anomaly.field_type.grid::input.collapse') }}">
                        {{ icon('fa fa-compress') }} <span>{{ trans('anomaly.field_type.grid::input.collapse') }}</span>
                    </a>
                    {% if not (field_type.readonly) %}
                        <a href="#" class="dropdown-item" data-add="above">
                            <i class="fa fa-plus"></i>
                            <span>{{ trans('anomaly.field_type.grid::input.add_above') }}</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <a href="#" class="dropdown-item text-danger" data-delete="row">
                            <i class="fa fa-trash"></i>
                            <span>{{ trans('anomaly.field_type.grid::input.delete') }}</span>
                        </a>
                    {% endif %}
                </div>
            </li>

            <li class="list-inline-item">
                <a href="#" class="grid-handle" onclick="return false;">
                    <i class="fa fa-arrows"></i>
                </a>
            </li>

        </ul>
    {% endif %}
</div>
